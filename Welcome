<body>
  <!-- Background Pinterest embed -->
  <div class="background-container">
    <iframe 
      class="background-iframe"
      src="https://assets.pinterest.com/ext/embed.html?id=12947917675255461" 
      frameborder="0" 
      scrolling="no">
    </iframe>
  </div>

  <!-- Dark overlay for text visibility -->
  <div class="overlay"></div>

  <!-- Main container with typing text -->
  <div class="container">
    <h1 class="typing-text" id="visionText"></h1>
  </div>

  <script>
    // Typing animation script
    const text = "VISION 360";
    const element = document.getElementById('visionText');
    let index = 0;

    // Start typing animation after 1.2 seconds
    setTimeout(() => {
      function typeWriter() {
        if (index < text.length) {
          element.textContent += text.charAt(index);
          index++;
          setTimeout(typeWriter, 150); // 150ms between letters
        } else {
          // Remove cursor when typing is complete
          element.classList.add('typing-complete');
        }
      }
      
      typeWriter();
    }, 1200); // 1.2 second delay
  </script>
</body>
</html>
